# -----------------------------
# PostgreSQL configuration file
# -----------------------------

# CONNECTIONS AND AUTHENTICATION
listen_addresses = '*'          # Listen on all interfaces
max_connections = 100           # Maximum number of connections

# RESOURCE USAGE
shared_buffers = 128MB          # Default shared memory buffer size

# WRITE-AHEAD LOG
wal_level = replica             # Minimal, replica, or logical
max_wal_size = 1GB              # Maximum size of WAL files
min_wal_size = 80MB             # Minimum size of WAL files

# REPORTING AND LOGGING
log_destination = 'stderr'      # Where to log
logging_collector = on          # Enable capturing of stderr into log files
log_directory = 'log'           # Directory where log files are written
log_filename = 'postgresql-%Y-%m-%d_%H%M%S.log' # Log file name pattern
log_truncate_on_rotation = off  # Truncate existing log file on rotation
log_rotation_age = 1d           # Automatic rotation of logfiles
log_rotation_size = 10MB        # Automatic rotation of logfiles

# CLIENT CONNECTION DEFAULTS
datestyle = 'iso, mdy'          # Date/time format
timezone = 'UTC'                # Default timezone

# LOCK MANAGEMENT
deadlock_timeout = 1s           # Time to wait before checking for deadlock

# ERROR HANDLING
restart_after_crash = on        # Reinitialize after backend crash?

